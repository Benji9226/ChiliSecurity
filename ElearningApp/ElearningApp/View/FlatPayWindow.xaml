<Window x:Class="ElearningApp.View.FlatPayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElearningApp.View"
        mc:Ignorable="d"
        Title="FlatPayWindow" Height="450" Width="800">
    <Grid>
        <Grid Margin="10,10,575,10">
            <ListBox x:Name="FlatPayGuidesListBox" ItemsSource="{Binding GuidesVM}" SelectedItem="{Binding SelectedGuideVM}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding GuideName}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Margin="303,10,10,10">
            <Button x:Name="openSelectedPdfButton" Content="OPEN" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="100" Height="50" Click="openSelectedPdfButton_Click"/>

        </Grid>
    </Grid>
</Window>
